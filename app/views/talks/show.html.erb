
<% title(@talk.title, "Talks") %>
<h2><%= @talk.title %> </h2>
Room: <%= @talk.room %> |
Description: <p><%= simple_format(@talk.description) %></p>
<br>
<br>
<%= link_to "Edit Talk", edit_talk_path(@talk) %> |
<%= link_to "Delete Talk", talk_path(@talk), :method => :delete,
:confirm => "Are you sure you want to delete this talk?" %>
<br>
<br>
<h4>Attendees:</h4>
<br>
<ul style="height: 50px">
  <% @talk.attendees.each do |attendee| %>
    <li style="height: 25px"><%= link_to attendee.name, attendee_path %>  |
      <% attendee.attendances.each do |attendance| %>
        <% if attendance.talk_id == @talk.id %>
          <% if attendance.presenter? %>
            --> Speaker |
          <% end %>
          <%= link_to "Remove Attendee", attendance_path(attendance),
            :method => :delete,
            :confirm => "Are you sure you want to remove this attendee?" %> </li>
        <% end %>
      <% end %>
  <% end %>
</ul>

<br>
<div>
  <%= link_to "Add Attendee", new_attendance_path %>
</div>


