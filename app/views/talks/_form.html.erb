<h2>New Talk</h2>
<%= form_for(@talk) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :room %><br />
    <%= f.text_field :room %>
  </p>

  <p>
    <%= f.label :speaker %><br />
    <%= f.text_field :speaker %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <%= f.submit %>
<% end %>

